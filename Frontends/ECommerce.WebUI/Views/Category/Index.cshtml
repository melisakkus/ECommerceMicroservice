@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Kategoriler</h1>
@{
    int count = 0;
}
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach(var item in Model)
    {
        count++;
        <tr>
           <th>@count</th>
           <td>@item.CategoryName</td>
           <td>
               <a href="/Category/DeleteCategory/@item.Id" class="btn btn-danger">Sil</a>
               <a href="/Category/UpdateCategory/@item.Id" class="btn btn-info">Güncelle</a>
           </td>
       </tr>
    }

</table>

<div class="text-center">
    <a href="/Category/CreateCategory" class="btn btn-primary">Yeni Kategori Oluştur</a>
</div>